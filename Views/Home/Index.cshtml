@model IEnumerable<Customer>

    <div class="text-center">
        <h1 class="display-4">List of customer within 100km of Dublin office</h1>
        <br />
        @if (Model.Count() > 0)
        {
        <table border="1">
            <tr>
                <td>UserId</td>
                <td>Name</td>
                <td>Distance(km)</td> 
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.user_id</td>
                    <td>@item.name</td>
                    <td>@item.distance</td> 
                </tr>
            }
        </table>
        }
    </div>
